// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ficha {
  id          String   @id @default(uuid()) // ID único interno
  codigo      String   @unique              // Código legível (ex: SKP-0001) ou hash seguro
  nomeProduto String
  imagemUrl   String?
  evento      String
  status      String   @default("disponivel") // disponivel, usada
  dataCompra  DateTime @default(now())
  dataUso     DateTime?
}